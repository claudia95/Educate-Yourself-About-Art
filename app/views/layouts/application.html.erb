<!DOCTYPE html>
<html>
  <head>
    <title>ArtEducationApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'application', "https://use.fontawesome.com/releases/v5.6.3/css/all.css" %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <%= link_to "Artsy Gene", root_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
       </button>

       <div class="collapse navbar-collapse" id="navbarColor01">
         <ul class="navbar-nav mr-auto">
           <li class="nav-item">
            <%= link_to 'Home', root_path, class: 'nav-link' %>
            </li>
            <% if logged_in? %>

            <li><%= link_to 'Profile', current_user, class: 'nav-link' %></li>
            <li><%= link_to "Logout", logout_path, method: :delete, class: 'nav-link'  %></li>

            <li><%= link_to "My Lists", root_path, class: 'nav-link' %></li>
          <% else %>
             <li>  <%= link_to "Login", login_path, class: 'nav-link' %></li>
            <% end %>

        </ul>
      </div>
    </nav>

    <!-- <div class="col-md-10 col-md-offset-1"> -->
        <div class="col-md-12">
    <%= yield %>
  </div>
<div class="site-footer">
  built with <i class="fas fa-heart"></i> from Claudia & Valeria
<div>


  </body>
</html>
