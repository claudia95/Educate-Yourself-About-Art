<h2>Your Lists</h2>

<%= link_to 'Create a new list', new_user_list_path(@user, @lists) %><hr>



<% @lists.each do |list| %>
   <tr>
     <td><%= list.name %></td><br>
     <td><%= link_to 'Show', user_list_path(@user, list) %></td>
     <td><%= link_to 'Edit', edit_user_list_path(@user, list) %></td>
     <td><%= link_to 'Destroy', user_list_path(@user, list ),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td><hr>
   </tr>
 <% end %>
</table>
